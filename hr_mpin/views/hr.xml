<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
         <record id="hr_types_seniority_insurance_list" model="ir.ui.view">
            <field name="name">hr.types.seniority.insurance.list</field>
            <field name="model">hr.types.seniority.insurance</field>
            <field name="arch" type="xml">
                <tree string="Types of seniority for insurance">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="hr_types_seniority_insurance_form" model="ir.ui.view">
            <field name="name">hr.types.seniority.insurance.form</field>
            <field name="model">hr.types.seniority.insurance</field>
            <field name="arch" type="xml">
                <form string="Types of seniority for insurance">
                    <group col="4">
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="hr_types_contribution_list" model="ir.ui.view">
            <field name="name">hr.types.contribution.list</field>
            <field name="model">hr.types.contribution</field>
            <field name="arch" type="xml">
                <tree string="Types of contribution">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="hr_types_contribution_form" model="ir.ui.view">
            <field name="name">hr.types.contribution.form</field>
            <field name="model">hr.types.contribution</field>
            <field name="arch" type="xml">
                <form string="Types of contribution">
                    <group col="4">
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="hr_designated_paying_authority_list" model="ir.ui.view">
            <field name="name">designated.paying.authority.list</field>
            <field name="model">hr.designated.paying.authority</field>
            <field name="arch" type="xml">
                <tree string="Designated paying authority">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="hr_designated_paying_authority_form" model="ir.ui.view">
            <field name="name">designated.paying.authority.form</field>
            <field name="model">hr.designated.paying.authority</field>
            <field name="arch" type="xml">
                <form string="Designated paying authority">
                    <group col="4">
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="edit_holiday_status_form" model="ir.ui.view">
            <field name="model">hr.holidays.status</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
            <field name="arch" type="xml">
                <field name="limit" position="after"> 
                    <field name="contribution_id"/>
                </field>
                <field name="active" position="after">
                    <field name="paying_authority_id"/>
                </field>
            </field>
        </record>

        <record id="hr_contract_view_form" model="ir.ui.view">
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <field name="advantages" position="after">
                    <field name="insurance_seniority_id"/>
                </field>
            </field>
        </record>

         <record id="action_types_seniority_insurance_form" model="ir.actions.act_window">
            <field name="name">Types of seniority for insurance</field>
            <field name="res_model">hr.types.seniority.insurance</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="hr_types_seniority_insurance_list"/>
        </record>

        <record id="action_types_contribution_form" model="ir.actions.act_window">
            <field name="name">Types of contribution</field>
            <field name="res_model">hr.types.contribution</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="hr_types_contribution_list"/>
        </record>

        <record id="action_designated_paying_authority_form" model="ir.actions.act_window">
            <field name="name">Designated paying authority</field>
            <field name="res_model">hr.designated.paying.authority</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="hr_designated_paying_authority_list"/>
        </record>

        <menuitem id="menu_action_types_seniority_insurance" action="action_types_seniority_insurance_form" parent="hr_payroll.menu_hr_payroll_configuration" sequence="15"/>
        <menuitem id="menu_action_types_contribution_form" action="action_types_contribution_form" parent="hr_payroll.menu_hr_payroll_configuration" sequence="16"/>
        <menuitem id="menu_action_designated_paying_authority_form" action="action_designated_paying_authority_form" parent="hr_payroll.menu_hr_payroll_configuration" sequence="17"/> 
    </data>
</odoo>
