<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_invoice_document"
                  inherit_id="account.report_invoice_document">
            <xpath expr="//div[@t-if='o.date_invoice']"
                   position="after">
                <div class="col-xs-2" t-if="o.date_due">
                    <strong>Due Date:</strong>
                    <p t-field="o.date_due"/>
                </div>
            </xpath>
            <xpath expr="//div[@t-if='o.reference']"
                   position="attributes">
                <attribute name="t-if">o.reference and o.origin != o.reference</attribute>
            </xpath>
            <xpath expr="//p[@t-if='o.fiscal_position_id.note']"
                   position="after">
                <div class="row"
                     style="margin-top: 40px; page-break-inside: avoid"
                     t-if="'out' in o.type">
                    <div class="col-xs-6">
                        <p class="text-center"
                           style="margin-bottom: 40px">
                            <strong>Authorized person</strong>
                        </p>
                        <div class="row">
                            <div class="col-xs-7"
                                 style="border-top: 1px solid black">
                                <p class="text-center">(Name)</p>
                            </div>
                            <div class="col-xs-4 col-xs-offset-1"
                                 style="border-top: 1px solid black">
                                <p class="text-center">(Signature)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-4 col-xs-offset-2">
                        <p class="text-center"
                           style="margin-bottom: 40px">
                            <strong>Received by</strong>
                            <div class="col-xs-12"
                                 style="border-top: 1px solid black">
                                <p><![CDATA[&nbsp;]]></p>
                            </div>
                        </p>
                    </div>
                </div>
            </xpath>
        </template>

    </data>
</odoo>
